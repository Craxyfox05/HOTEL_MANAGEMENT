@model IEnumerable<HotelManagementSystem.Models.Room>
@{
    ViewData["Title"] = "Manage Rooms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Manage Rooms</h2>
        <a asp-action="CreateRoom" class="btn btn-primary">Add New Room</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Room No</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model)
                {
                    <tr>
                        <td>@room.RoomNo</td>
                        <td>@room.Type</td>
                        <td>â‚¹@room.Price.ToString("N2")</td>
                        <td>
                            @if (room.Status == "Available")
                            {
                                <span class="badge bg-success">@room.Status</span>
                            }
                            else if (room.Status == "Booked")
                            {
                                <span class="badge bg-danger">@room.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">@room.Status</span>
                            }
                        </td>
                        <td>@(room.Description ?? "N/A")</td>
                        <td>
                            <a asp-action="EditRoom" asp-route-id="@room.Id" class="btn btn-sm btn-primary">Edit</a>
                            <form asp-action="DeleteRoom" asp-route-id="@room.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this room?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

