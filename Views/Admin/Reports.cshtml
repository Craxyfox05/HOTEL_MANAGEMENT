@model IEnumerable<HotelManagementSystem.Models.Booking>
@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">Reports</h2>
    
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Reports">
                <div class="row">
                    <div class="col-md-3">
                        <select name="period" class="form-select">
                            <option value="">All Time</option>
                            <option value="daily">Today</option>
                            <option value="monthly">This Month</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary">Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Booking Report (@ViewBag.Period)</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Booking ID</th>
                            <th>Customer</th>
                            <th>Room</th>
                            <th>Check-in</th>
                            <th>Check-out</th>
                            <th>Total Amount</th>
                            <th>Payment Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.Id</td>
                                <td>@booking.User.Name</td>
                                <td>@booking.Room.RoomNo</td>
                                <td>@booking.CheckIn.ToString("dd/MM/yyyy")</td>
                                <td>@booking.CheckOut.ToString("dd/MM/yyyy")</td>
                                <td>₹@booking.TotalAmount.ToString("N2")</td>
                                <td>
                                    @if (booking.PaymentStatus == "Completed")
                                    {
                                        <span class="badge bg-success">@booking.PaymentStatus</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">@booking.PaymentStatus</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="5">Total Revenue</th>
                            <th>₹@Model.Where(b => b.PaymentStatus == "Completed").Sum(b => b.TotalAmount).ToString("N2")</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

