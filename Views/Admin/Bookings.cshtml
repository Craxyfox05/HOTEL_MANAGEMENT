@model IEnumerable<HotelManagementSystem.Models.Booking>
@{
    ViewData["Title"] = "Manage Bookings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">Manage Bookings</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>Customer</th>
                    <th>Room</th>
                    <th>Check-in</th>
                    <th>Check-out</th>
                    <th>Total Amount</th>
                    <th>Payment Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.Id</td>
                        <td>@booking.User.Name</td>
                        <td>@booking.Room.RoomNo (@booking.Room.Type)</td>
                        <td>@booking.CheckIn.ToString("dd/MM/yyyy")</td>
                        <td>@booking.CheckOut.ToString("dd/MM/yyyy")</td>
                        <td>â‚¹@booking.TotalAmount.ToString("N2")</td>
                        <td>
                            @if (booking.PaymentStatus == "Completed")
                            {
                                <span class="badge bg-success">@booking.PaymentStatus</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">@booking.PaymentStatus</span>
                            }
                        </td>
                        <td>
                            <a asp-controller="Booking" asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-info">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

