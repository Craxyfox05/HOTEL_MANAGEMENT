@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section bg-primary text-white text-center py-5 mb-5">
    <div class="container">
        <h1 class="display-4 mb-4">Welcome to Hotel Management System</h1>
        <p class="lead mb-4">Book your stay now and experience luxury!</p>
        <a asp-controller="Room" asp-action="Index" class="btn btn-light btn-lg">Browse Rooms</a>
    </div>
</div>

<div class="container">
    <h2 class="text-center mb-4">Available Rooms</h2>
    <div class="row">
        @if (ViewBag.AvailableRooms != null)
        {
            @foreach (var room in ViewBag.AvailableRooms as List<HotelManagementSystem.Models.Room>)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-img-top bg-secondary text-white text-center p-5" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-door-open" style="font-size: 4rem;"></i>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Room @room.RoomNo</h5>
                            <p class="card-text">
                                <strong>Type:</strong> @room.Type<br>
                                <strong>Price:</strong> â‚¹@room.Price per night<br>
                                <strong>Status:</strong> <span class="badge bg-success">@room.Status</span>
                            </p>
                            <a asp-controller="Room" asp-action="Details" asp-route-id="@room.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <h2 class="text-center mb-4">Why Choose Us?</h2>
            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    <i class="bi bi-shield-check" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h4>Secure Booking</h4>
                    <p>Safe and secure payment processing</p>
                </div>
                <div class="col-md-4 text-center mb-4">
                    <i class="bi bi-clock-history" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h4>24/7 Support</h4>
                    <p>Round-the-clock customer service</p>
                </div>
                <div class="col-md-4 text-center mb-4">
                    <i class="bi bi-star-fill" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h4>Premium Experience</h4>
                    <p>Luxury accommodations for every guest</p>
                </div>
            </div>
        </div>
    </div>
</div>

